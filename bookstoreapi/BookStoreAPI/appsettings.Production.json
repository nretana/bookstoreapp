{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "BookStoreDbConnectionString": "Data Source=[set-server-name];Initial Catalog=[set-databasename];Trusted_Connection=True;encrypt=false;"
  },
  "JWTSettings": {
    "SecurityKey": "[set-your-secret-key]",
    "ValidIssuer": "[set-issuer]",
    "ValidAudience": "[set-audience]",
    "ExpiryInMinutes": 7
  },
  "EmailConfiguration": {
    "From": "[set-from-email]",
    "SmtpServer": "[set-smtp-server]",
    "Port": 587,
    "Username": "[set-smtp-username]",
    "Password": "[set-smtp-password]"
  }
}
